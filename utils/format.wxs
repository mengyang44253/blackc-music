function formatCount(count){
  const counter=parseInt(count)
  if(counter>100000000){
    return (counter/100000000).toFixed(1)+'亿'
  }else if(counter>10000){
    return (counter/10000).toFixed(1)+'万'
  }else{
    return counter+""
  }
}


